{% extends 'base.html.twig' %}

{% block title %}Insert{% endblock %}

{% block body %}
    <div class="max-w-4xl w-full mx-auto text-center my-32 rounded-2xl shadow-xl">
        {% for label, messages in app.flashes(['success']) %}
            {% for message in messages %}
                <span class="text-center text-red-600">{{ message }}</span>
            {% endfor %}
        {% endfor %}
        <h1 class="my-6 text-3xl">Administration</h1>
        <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
            <form method="post" novalidate class="space-y-4 md:space-y-6 mx-auto md:w-1/2 w-auto px-5 md:px-0 mb-8" enctype="multipart/form-data">
                <div>
                    <label for="name" class="block mb-2 text-sm font-medium text-gray-900">Name:</label>
                    <input type="text" name="name" id="name" required class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5">
                </div>
                <div>
                    <label for="price" class="block mb-2 text-sm font-medium text-gray-900">Price:</label>
                    <input type="number" id="price" name="price" required class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5">
                </div>
                <div>
                    <label for="speed" class="block mb-2 text-sm font-medium text-gray-900">Max speed:</label>
                    <input type="number" id="speed" name="speed" required  class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5">
                </div>
                <div>
                    <label class="block mb-2 text-sm font-medium text-gray-900" for="file">Upload picture
                    <input class="block p-5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 cursor-pointer dark:text-gray-400 focus:outline-none" id="file" name="file" type="file">
                    </label>
                </div>
                <button type="submit" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Insert</button>
            </form>
        </div>
    </div>
{% endblock %}